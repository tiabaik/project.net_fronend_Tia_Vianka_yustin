@{
    ViewData["Title"] = "Lender";
    Layout = "_LayoutLender";

}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title">Profil Lender</h2>
                    <p id="userName" class="lead">Nama: <strong>Name</strong></p>
                    <h2 class="card-title mt-3">Saldo</h2>
                    <p id="userSaldo" class="lead">Saldo Anda: <strong>Rp 0</strong></p>
                    <button class="btn btn-primary" id="addBalanceButton" data-toggle="modal" data-target="#addBalanceModal">Top Up Balance</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!------MODAL ADD BALANCE-->
<div class="modal fade" id="addBalanceModal" tabindex="-1" role="dialog" aria-labelledby="addBalanceModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addBalanceModalLabel">Top Up Balance</h5>
            </div>
            <div class="modal-body">
                <form id="addBalanceForm">
                    <div class="form-group">
                        <label for="addBalanceBalance">Balance</label>
                        <input type="number" class="form-control" id="addBalanceBalance" required />
                    </div>
                    <input type="hidden" id="addBalanceId" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="updateBalance()">Save</button>
            </div>

        </div>
    </div>

</div>

<script src="~/js/lender.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>